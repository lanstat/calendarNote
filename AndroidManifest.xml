<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.androidbasico.calendarnotes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/calendar"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="dev.androidbasico.calendarnotes.view.ListNoteActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="dev.androidbasico.calendarnotes.view.NewNoteActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="dev.androidbasico.calendarnotes.view.DetailNoteActivity"
            android:theme="@style/AppTheme" >
        </activity>

        <service android:name="dev.androidbasico.calendarnotes.controllers.Servicio" >
        </service>

        <activity
            android:name="dev.androidbasico.calendarnotes.view.ConfigurationActivity"
            android:label="@string/title_activity_configuration" android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="dev.androidbasico.calendarnotes.view.SplashActivity"
            android:label="@string/title_activity_splash" android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>