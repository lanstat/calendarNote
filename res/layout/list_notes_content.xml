<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/app"
    android:layout_width="1dp" 
    android:layout_height="1dp" 
    android:orientation="vertical"
    style="@style/BackgroundContent">
    <RelativeLayout 
        android:id="@+id/tabBar" 
        android:layout_width="fill_parent" 
        style="@style/NoName"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/BtnSlide" 
            android:layout_width="45sp" 
            android:layout_height="45sp"
            android:padding="5dp"
            android:layout_margin="0px" 
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/calendar" />
        <ImageView 
            android:id="@+id/BtnSubMenu" 
            android:layout_width="45sp" 
            android:layout_height="45sp"
            android:padding="10dp"
            android:layout_margin="0px" 
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/submenu" />
        <ImageView 
            android:id="@+id/BtnSearch" 
            android:layout_width="45sp" 
            android:layout_height="45sp"
            android:padding="10dp"
            android:layout_margin="0px" 
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/BtnSubMenu"
            android:src="@drawable/search" />
    </RelativeLayout>
    <FrameLayout 
        android:id="@+id/frames"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    	<ListView
        	android:id="@+id/list" 
        	android:layout_width="match_parent" 
        	android:layout_height="wrap_content"
	        android:dividerHeight="5dp"
    	    android:cacheColorHint="#e4e4e4"
	        android:padding="5dp">
    	</ListView>
    </FrameLayout>
</LinearLayout>